#include <iostream>
using namespace std;

void fillBoard(char arr[6][7]);
void print(char arr[6][7]);
void inputp1(int* p1, char arr[6][7]);
void inputp2(int* p2, char arr[6][7]);
void dropCoin(char arr[6][7], int column, bool playerflag);

int main() {
	char board[6][7];
	int columnp1;
	int columnp2;
	bool checkLogic;
	bool player = true;

	//Fill and print board
	fillBoard(board);
	print(board);
	cout<<endl;

	do{
		player = true;
		checkLogic = false;
		inputp1(&columnp1, board);
		dropCoin(board, columnp1, player);

		print(board);
		cout<<endl;

		player = !player;
		inputp2(&columnp2, board);
		dropCoin(board, columnp2, player);

		print(board);
		cout<<endl;


	}while(!checkLogic);



	return 0;
}

void fillBoard(char arr[6][7]){
	for(int i=0; i<7; i++){
		for(int j=0; j<7;j++){
			arr[i][j] = 'X';
		}
	}
}
void print(char arr[6][7]){
	for(int i=0; i<6; i++){
			for(int j=0; j<7;j++){
				cout<<arr[i][j]<<"  ";
			}
			cout<<endl;
		}
}
void dropCoin(char arr[6][7], int column, bool playerflag){
	if(playerflag){
		for(int i = 5; i >= 0; i--){
			if((arr[i][column]=='X')){
				arr[i][column] = 'R';
				break;
			}
		}
	}
	else{
		for(int i = 5; i >= 0; i--){
			if((arr[i][column]=='X')){
				arr[i][column] = 'B';
				break;
			}
		}
	}
}

void inputp1(int* p1, char arr[6][7]){
	int column;

	while(1){
		cout<<"Player 1(R): Insert Column Number to Insert Coin"<<endl;
		cin>>column;

		if (column>6){
			cout<<"Error, please insert into a column between 0 and 6"<<endl;
			continue;
		}

		if (arr[0][column] == 'X'){
			*p1= column;
			break;

		}
		else{
			cout<<"Error, please insert into a different column"<<endl;
			continue;
		}
	}
}
void inputp2(int* p2, char arr[6][7]){
	int column;
	while(1){
			cout<<"Player 1(R): Insert Column Number to Insert Coin"<<endl;
			cin>>column;

			if (column>6){
				cout<<"Error, please insert into a column between 0 and 6"<<endl;
				continue;
			}

			if (arr[0][column] == 'X'){
				*p2= column;
				break;

			}
			else{
				cout<<"Error, please insert into a different column"<<endl;
				continue;
			}
	}
}



